Bootstrap: docker
From: nvidia/cuda:12.1.1-cudnn8-devel-ubuntu22.04

%files
    pyproject.toml /transcriptomic-fms/
    README.md /transcriptomic-fms/
    transcriptomic_fms /transcriptomic-fms/transcriptomic_fms

%labels
    Author "Ahmed Sallam"
    Version "0.3.1-H100"
    Description "scGPT ported for H100 (PyTorch 2.1.1, No FlashAttn)"

%post
    # 1. System Dependency Installation
    export DEBIAN_FRONTEND=noninteractive
    apt-get update && apt-get install -y \
        python3 \
        python3-pip \
        python3-dev \
        git \
        build-essential \
        r-base \
        wget \
        pkg-config \
        tzdata

    ln -s /usr/bin/python3 /usr/bin/python
    pip3 install --upgrade pip setuptools wheel packaging

    # 2. Patch pyproject.toml
    sed -i 's/requires-python = ">=3.11"/requires-python = ">=3.10"/g' /transcriptomic-fms/pyproject.toml
    sed -i "s/requires-python = '>=3.11'/requires-python = '>=3.10'/g" /transcriptomic-fms/pyproject.toml

    # 3. CRITICAL: Pin NumPy < 2
    pip install "numpy<2"

    # 4. Install PyTorch 2.1.1 (H100 Compatible)
    # We downgraded from 2.1.2 to 2.1.1 strictly to satisfy torchtext 0.16.1
    pip install torch==2.1.1 torchvision==0.16.1 torchaudio==2.1.1 torchtext==0.16.1 \
        --index-url https://download.pytorch.org/whl/cu121

    # 5. Install Core Dependencies
    pip install pyarrow
    pip install "orbax<0.1.8"
    pip install markupsafe==2.0.1 wandb pyro-ppl==1.8.6

    # 6. Install scGPT (MANUALLY)
    # We install with --no-deps to prevent it from pulling broken flash-attn
    pip install scgpt --no-deps

    # 7. Install Project Dependencies
    pip install "pandas" "scanpy" "gdown" "python-louvain" "umap-learn<0.5.7"
    pip install "ipython" "jupyterlab" "matplotlib" "notebook" "python-dotenv" "ruff" "scikit-learn"

    # 8. Install our package
    cd /transcriptomic-fms
    pip install --no-deps --ignore-requires-python -e .

    # 9. Create directories
    mkdir -p /transcriptomic-fms/data
    mkdir -p /transcriptomic-fms/output
    mkdir -p /transcriptomic-fms/models

    # 10. Final Verification
    echo "=== VERSION CHECK ==="
    pip list | grep -E "torch|scgpt|numpy"

%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8
    export DEBIAN_FRONTEND=noninteractive
    
    export CUDA_HOME=/usr/local/cuda
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/cuda/lib64

    export PYTHONPATH="/transcriptomic-fms:$PYTHONPATH"
    export PYTHONUNBUFFERED=1
    export PYTHONNOUSERSITE=1
    
    export REQUESTS_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt
    export SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt
    export CURL_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt

%runscript
    exec python -m transcriptomic_fms.cli.main "$@"